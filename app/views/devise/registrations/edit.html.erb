<div class="account-settings-body">
  <div class="account-settings-form">
    <h2 class="settings-name"><%= resource_name.to_s.humanize %> プロフィール編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="line"></div>
      <div class="settings-subname">基本情報</div>

      <div class="settings-field">
        <%= f.label :email, class:"settings-el" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"settings-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="passwords">
        <div class="settings-field">
        <%= f.label :password, class:"settings-el" %> <i> (leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"settings-input" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="settings-field">
        <%= f.label :password_confirmation, class:"settings-el" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"settings-input" %>
      </div>
      </div>

    <div class="settings-line"></div>

    <div class="settings-subname">自己紹介</div>

    <div class="settings-middle">
      <div class="settings-left">
      <div class="settings-field">
      <%= f.label :名前, class:"settings-el" %><br />
      <%= f.text_field :name, class:"settings-input" %>
    </div>

     <div class="settings-field">
      <%= f.label :苗字, class:"settings-el" %><br />
      <%= f.text_field :surname, class:"settings-input" %>
    </div>

     <div class="settings-field">
      <%= f.label :ニックネーム, class:"settings-el" %><br />
      <%= f.text_field :nickname, class:"settings-input" %>
    </div>

    <div class="settings-field">
      <%= f.label :お誕生日, class:"settings-el" %><br />
      <%= f.date_field :birthday, class:"settings-input" %>
    </div>
    </div>

    <div class="settings-right">
      <div class="settings-field settings-el">写真</div>
      <div class="settings-img-box">
        <%= f.text_field :image, id: "image", class:"settings-input settings-img-box" %>
        <img id = "img-preview", class="hidden" >
     </div>

    <div class="settings-field">
      <%= f.label :国の選択, class:"settings-el" %><br />
      <%= f.date_field :country_id, class:"settings-input" %>
    </div>
    </div>
    </div>

    <div class="settings-field">
      <%= f.label :自己紹介, class:"settings-el" %><br />
      <%= f.text_area :about_me, class:"settings-input about_me" %>
    </div>

      <div class="settings-field">
        <%= f.label :current_password, class:"settings-el" %> <i> (we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class:"settings-input" %>
      </div>

     <div class="setting-actions">
        <%= f.submit "保存", class:"setting-submit upd"%>
      </div>
    <% end %>

    <div class="line"></div>

    <div class="settings-bottom">
      <div class="cancell-account">
        <h3 class="settings-el">アカウント削除</h3>
        <p><%= button_to "削除", registration_path(resource_name), class:"setting-submit cncl", data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>

      <div class="back-to-top">
        <h3 class="settings-el">トップページへ</h3>
        <%= link_to "Back", :back, class:"setting-submit" %>
      </div>
    </div>
    </div>
</div>